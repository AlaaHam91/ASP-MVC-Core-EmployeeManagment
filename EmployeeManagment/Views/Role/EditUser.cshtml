@model  EditUserViewModel
@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <form method="post" class="mt-3">
        <div class="form-group row"></div>
        <label asp-for="@Model.Id" class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Id" disabled class="form-control" />
        </div>

        <div class="form-group row"></div>
        <label asp-for="@Model.Email" class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Email" disabled class="form-control" />
        </div>

        <div class="form-group row"></div>
        <label asp-for="@Model.City" class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.City" disabled class="form-control" />
        </div>

        <div class="form-group row"></div>
        <label asp-for="@Model.UserName" class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.UserName" class="form-control" />
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row"></div>
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="ListUsers" class="btn btn-primary">Cancel</a>
        </div>


        <div class="card">
            <div class="card-header">User Roles</div>
            <div class="card-body">
                @if (Model.Roles.Any())
                {
                    foreach (var role in Model.Roles)
                    {
                        <h5 class="card-title">@role</h5>

                    }
                }
                else
                {
                    <h5 class="card-title">Non at the moment</h5>

                }

            </div>
            <div class="card-footer">
                <a class="btn btn-danger" asp-controller="Role" style="width:auto"
                   asp-action="ManageUserRoles" asp-route-userId="@Model.Id">Manage Roles</a>

            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">User Claims</div>
            <div class="card-body">
                @if (Model.Claims.Any())
                {
                    foreach (var claim in Model.Claims)
                    {
                        <h5 class="card-title">@claim</h5>

                    }
                }
                else
                {
                    <h5 class="card-title">Non at the moment</h5>

                }

            </div>
            <div class="card-footer">
                <a class="btn btn-danger" asp-controller="Role" 
                   style="width:auto" asp-action="ManageUserClaim" 
                   asp-route-userId="@Model.Id">Manage Claims</a>

            </div>
        </div>
    </form>
