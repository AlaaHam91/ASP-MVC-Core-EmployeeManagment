@model  AddPasswordViewModel
@{
    ViewData["Title"] = "AddPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-info">This is page to add oassword for your external account</h4>
<div class="card">
    <div class="col-md-12">
        <form method="post" asp-action="AddPassword">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmedPassword"></label>
                <input asp-for="ConfirmedPassword" class="form-control" />
                <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" style="width:auto">Set Password</button>
        </form>
    </div>
</div>